<script>
    document.addEventListener("DOMContentLoaded", function () {
        const accountManager =document.querySelector('.accountManager')
        const inforUser = document.querySelector('.inforUser')
        const accessToken = localStorage.getItem("accessToken");

        if (accessToken) {
            // Giải mã token và lấy username
            const tokenParts = accessToken.split('.');
            if (tokenParts.length === 3) {
                const payload = tokenParts[1];
                const decodedPayload = JSON.parse(atob(payload));
                const admin = decodedPayload.admin;
                console.log(admin);
                if(!admin){
                    accountManager.style.display='none'
                    inforUser.style.display='none'
                }
            
            }
        }
    });

</script>